{
  "name": "flagship",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/nextjs"
    ]
  },
  "scripts": {
    "account": "yarn workspace @flagship/hardhat account",
    "chain": "yarn workspace @flagship/hardhat chain",
    "fork": "yarn workspace @flagship/hardhat fork",
    "deploy": "yarn workspace @flagship/hardhat deploy",
    "verify": "yarn workspace @flagship/hardhat verify",
    "compile": "yarn workspace @flagship/hardhat compile",
    "generate": "yarn workspace @flagship/hardhat generate",
    "hardhat:lint": "yarn workspace @flagship/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @flagship/hardhat lint-staged",
    "hardhat:test": "yarn workspace @flagship/hardhat test",
    "start": "yarn workspace @flagship/nextjs dev",
    "next:lint": "yarn workspace @flagship/nextjs lint",
    "next:format": "yarn workspace @flagship/nextjs format",
    "next:check-types": "yarn workspace @flagship/nextjs check-types",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "yarn workspace @flagship/nextjs vercel",
    "vercel:yolo": "yarn workspace @flagship/nextjs vercel:yolo"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}
